{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "dynamic_templates": [
    {
      "strings_as_keywords": {
        "match_mapping_type": "string",
        "mapping": {
          "type": "keyword"
        }
      }
    }
  ],
  "mappings": {
    "_doc": {
      "properties": {
        "counted_incidents": {
          "type": "nested",
          "dynamic": "strict",
          "properties": {
            "companion": {"type": "keyword"},
            "count": {"type": "integer"}
          }
        },
        "incident_detail": {
          "type": "nested",
          "dynamic": "strict",
          "properties": {
            "companions": {"type": "keyword"},
            "location": {"type": "geo_point"},
            "time_range": {"type": "date_range"}
          }
        }
      }
    }
  }
}